<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Sign Up", signup_path %> or 
  <%= link_to "Log In", login_path %>
<% end %>

<h1>Listings</h1>
<% if current_user.admin? %>
    <%= link_to "New Listings", new_user_listing_path(current_user.id) %> 
<% end %>

<hr>

<%= form_with url: user_listings_path(current_user.id), method: "get", local: true do  %>
    <%= text_field_tag(:location_name) %>
    <%= submit_tag "Search" %>
<% end %>

<% @listings.each do |l| %>
    <%= l.address %>
    <%= link_to "View Listings", user_listing_path(user_id: current_user.id, id: l.id) %>
    <br>
<% end %>