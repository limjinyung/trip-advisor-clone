<%= form_with(url: user_listings_path(current_user.id), scope: :listing, local: true) do |form| %>

  <div class="field">
    <%= form.label :Address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :"Location name" %>
    <%= form.text_field :location_name %>
  </div>

  <div class="field">
    <%= form.label :Email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :"Phone number" %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :Ratings %>
    <%= form.select :ratings, (0..5) %>
  </div>


<%= form.hidden_field :user_id, value: current_user.id %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

